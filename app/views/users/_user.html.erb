<div id="<%= dom_id user %>">
  <p>
    <strong>User:</strong>
    <%= user.email %>
    has created the following events:
  </p>
</div>

<% if user.created_events.any? %>
  <div>
    <% user.created_events.each do |event| %>
      <p>
        <strong>Date:</strong>
        <%= event.date %>
      </p>

      <p>
        <strong>Location:</strong>
        <%= event.location%>
      </p>
  </div>
  <% end %>
<% end %>
