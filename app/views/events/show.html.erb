<%= render @event %>
<div>
  <p><strong>Attendees:</strong></p>
  <% @event.attendee_ids.each do |attendee| %>
    <p>
      <%= User.find(attendee).email %>
    </p>
  <% end %>
</div>

<% unless @event.attendees.include?(current_user) %>
  <%= button_to "Join Event", attend_event_path(@event), method: :post %>
<% else %>
  <p>You are attending this event.</p>
<% end %>

<%= link_to 'back to events', events_path %>
